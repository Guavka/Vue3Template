{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "lib": [
      "DOM",
      "ESNext",
      "WebWorker"
    ],
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "vitest",
      "vite/client",
      "vue/ref-macros",
      "vite-plugin-pages/client",
      "vite-plugin-vue-layouts/client"
    ],
    "paths": {
      "~/*": [
        "src/*"
      ],
      "~modules/*": [
        "src/modules/*"
      ],
      "~plugins/*": [
        "src/plugins/*"
      ],
      "~assets/*": [
        "src/assets/*"
      ],
      "~layouts/*": [
        "src/layouts/*"
      ],
      "~srcPages/*": [
        "src/pages/*"
      ],
      "~store/*": [
        "src/store/*"
      ],
      "~styles/*": [
        "src/styles/*"
      ],
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "cypress"
  ]
}